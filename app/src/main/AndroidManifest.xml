<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theunquenchedservant.granthornersbiblereadingsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.theunquenchedservant.granthornersbiblereadingsystem.ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.theunquenchedservant.granthornersbiblereadingsystem.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.theunquenchedservant.granthornersbiblereadingsystem.MainActivity" />
        </activity>

        <receiver
            android:name="com.theunquenchedservant.granthornersbiblereadingsystem.ui.notifications.remindReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name="com.theunquenchedservant.granthornersbiblereadingsystem.ui.notifications.dailyCheck"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name="com.theunquenchedservant.granthornersbiblereadingsystem.ui.notifications.doneReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.theunquenchedservant.granthornersbiblereadingsystem.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.theunquenchedservant.granthornersbiblereadingsystem.ui.notifications.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>