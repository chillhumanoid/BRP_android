<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <TextView style="?android:textAppearanceLarge"
            android:padding="16dp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose Your Plan Method"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/title_horner"
                android:padding="16dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grant Horner"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/summary_horner"
                    android:padding="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginEnd="50dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Each list is independent of the other, and will go at your own pace. This is the traditional Grant Horner system."/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox_horner"/>
            </LinearLayout>

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/title_numerical"
                android:padding="16dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numerical Day"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/summary_numerical"
                    android:padding="16dp"
                    android:layout_width="300dp"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginEnd="50dp"
                    android:layout_height="wrap_content"
                    android:text="All lists are connected, partial completion is possible, but all lists will advance at once."/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox_numerical"/>
            </LinearLayout>
            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/title_calendar"
                android:padding="16dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar Day"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/summary_calendar"
                    android:padding="16dp"
                    android:layout_width="300dp"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginEnd="50dp"
                    android:layout_height="wrap_content"
                    android:text="All lists are connected, and will advance whether you complete all the readings or not. Everyone using this method will have the same reading for that day. This is similar to the M\'Cheyne system."/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox_calendar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>