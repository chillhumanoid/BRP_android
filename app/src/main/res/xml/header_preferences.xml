<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.theunquenchedservant.pghsystem.ui.settings.UnquenchedPreferenceCategory
        app:key="option_category"
        app:title="Options">
        <SwitchPreferenceCompat
            app:key="psalms"
            app:title="5 Psalms by the Day"
            app:summary="Ex. If it's the 5th, Psalms for the day would be 5, 35, 65, 95, 125"/>
        <Preference
            app:fragment="com.theunquenchedservant.pghsystem.ui.settings.SettingsActivity$NotificationsFragment"
            app:key="notifications"
            app:title="Notifications"/>
        <Preference
            app:fragment="com.theunquenchedservant.pghsystem.ui.settings.SettingsActivity$ResetFragment"
            app:key="reset_header"
            app:title="@string/reset_header" />
    </com.theunquenchedservant.pghsystem.ui.settings.UnquenchedPreferenceCategory>

    <com.theunquenchedservant.pghsystem.ui.settings.UnquenchedPreferenceCategory
        app:key="information_category"
        app:title="Information">
        <Preference
            app:fragment="com.theunquenchedservant.pghsystem.ui.settings.SettingsActivity$StatisticsFragment"
            app:key="stats"
            app:title="Statistics"/>
        <Preference
            app:key="privacy"
            app:title="Privacy Policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://theunquenchedservant.com/assets/brp_privacy_policy.html"/>
        </Preference>

    </com.theunquenchedservant.pghsystem.ui.settings.UnquenchedPreferenceCategory>

</PreferenceScreen>
