<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:key="notification_category"
        app:title="Notifications">
        <SwitchPreferenceCompat
            app:key="notif_switch"
            app:title="Notifications" />
        <com.theunquenchedservant.granthornersbiblereadingsystem.ui.settings.TimePreference
            app:key="daily_time"
            app:title="Daily List Time"
            android:defaultValue="90"
            style="@style/AppPreference.DialogPreference"/>
        <com.theunquenchedservant.granthornersbiblereadingsystem.ui.settings.TimePreference
            app:key="remind_time"
            app:title="Reminder Time"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:key="option_category"
        app:title="Options">
        <SwitchPreferenceCompat
            app:key="psalms"
            app:title="5 Psalms by the Day"
            app:summary="Ex. If it's the 5th, Psalms for the day would be 5, 35, 65, 95, 125"/>
        <Preference
            app:fragment="com.theunquenchedservant.granthornersbiblereadingsystem.ui.settings.SettingsActivity$ResetFragment"
            app:key="reset_header"
            app:title="@string/reset_header" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="information_category"
        app:title="Information">
        <Preference
            app:key="privacy"
            app:title="Privacy Policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://theunquenchedservant.com/assets/brp_privacy_policy.html"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>
